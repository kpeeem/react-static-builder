.main
  width 100%
  height 100vh
  margin 0 auto
  display flex
  flex-direction row
  justify-content center
  align-items center
.slogan
  text-align center
  font-family: ProximaNova-Black
  font-size 42px
  animation-name fadeInDown
  animation-duration 1s
  animation-fill-mode both

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

