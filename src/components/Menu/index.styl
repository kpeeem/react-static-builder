.menu
  list-style none
  display flex
  flex-direction column
  margin 55px
  position fixed

.link
  text-decoration none
  cursor pointer
  font-size 20px
  color black
  display: flex
  margin-bottom 10px
  &:hover
    box-shadow inset 0 0 0 white, inset 0 -3px 0 black

@media (max-width : 992px)
  .menu
    display none