.menu
  margin 0 auto
  width 600px
  display flex
  flex-direction column
  align-items flex-start
  padding-left 180px
  justify-content space-around
  height 100%
  padding-bottom 100px
  padding-top 100px
  min-height 450px
  max-height 600px

.link
  font-family HelveticaNeueCyr-Medium
  text-decoration none
  color #fff
  font-size 52px
  line-height 1
  display flex
  transition color 0.8 ease-in-out

.link:hover
  color #f7fe00

.fade
  position fixed
  overflow hidden
  height 100%
  width 100%
  opacity 0.95
  background-color #000
  left 0
  top 0
  z-index 10